; PlatformIO Project Configuration File
;
;   Build options: build flags, source filter
;   Upload options: custom upload port, speed and extra flags
;   Library options: dependencies, extra library storages
;   Advanced options: extra scripting
;
; Please visit documentation for the other options and examples
; https://docs.platformio.org/page/projectconf.html

[platformio]
description = MeatLoaf is a wifi enabled multi-device emulator for Commodore 64/128
; Change this to target the device you use from the list of [env:xxx] sections below
default_envs = d1_mini
;default_envs = esp32doit-devkit-v1

[env]
framework = arduino
upload_speed = 921600
;upload_port = COM1 ; Windows
;upload_port = /dev/ttyUSB0 ; Linux
upload_port = /dev/tty.SLAB_USBtoUART ; Mac
monitor_speed = 921600
;monitor_port = COM1 ; Windows
;monitor_port = /dev/ttyUSB0 ; Linux
monitor_port = /dev/tty.SLAB_USBtoUART ; Mac
monitor_filters = default, esp8266_exception_decoder, esp32_exception_decoder

lib_deps = 
    ArduinoJson
    ArduinoWebsockets

build_type = debug

build_flags =
    -D USE_LITTLEFS

[env:d1_mini]
platform = espressif8266
board = d1_mini
; set frequency to 160MHz
board_build.f_cpu = 160000000L
board_build.filesystem = littlefs
monitor_speed = 2400
;board_build.flash_mode = dout ;Uncomment this line and reflash if your device doesn't boot

[env:d1_mini_pro]
platform = espressif8266
board = d1_mini_pro
; set frequency to 160MHz
board_build.f_cpu = 160000000L
board_build.filesystem = littlefs
monitor_speed = 2400
;board_build.ldscript = eagle.flash.8m7m.ld ;Uncomment this line and rebuild if your filesystem was calculated 4GB in size
;board_build.flash_mode = dout ;Uncomment this line and reflash if your device doesn't boot

[env:nodemcuv2]
platform = espressif8266
board = nodemcuv2
; set frequency to 160MHz
board_build.f_cpu = 160000000L
board_build.filesystem = littlefs
;board_build.flash_mode = dio ;Uncomment this line and reflash if your device doesn't boot

[env:esp32doit-devkit-v1]
platform = espressif32
board = esp32doit-devkit-v1
board_build.filesystem = littlefs
;board_build.flash_mode = dio ;Uncomment this line and reflash if your device doesn't boot
